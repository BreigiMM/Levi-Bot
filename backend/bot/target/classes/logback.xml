<configuration>
    <timestamp key="runTimestamp" datePattern="yyyy-MM-dd_HH-mm-ss" />

    <!-- Verbose File Appender -->
    <appender name="VERBOSE" class="ch.qos.logback.core.FileAppender">
        <file>logs/levi-${runTimestamp}-verbose.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Only Levi Log File Appender -->
    <appender name="SHORT" class="ch.qos.logback.core.FileAppender">
        <file>logs/levi-${runTimestamp}.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name ="de.breigindustries.cs" level="debug" additivity="false">
        <appender-ref ref="SHORT" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <root level="debug">
        <appender-ref ref="VERBOSE" />
    </root>
</configuration>
